{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "tests",
    "module": "commonjs",
    "isolatedModules": false,
    "noEmit": true,
    "declarationMap": true
  },
  "exclude": [
    "**/*.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.d.ts"
  ]
}